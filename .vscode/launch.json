    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flor Record: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--flor",
                "debugRun"
            ]
        },
        {
            "name": "Flor Replay: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--replay_flor"
            ]
        }
    ]
}